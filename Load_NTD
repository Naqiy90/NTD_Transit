#import dependencies
import numpy as np
import pandas as pd
#load latest NTD data
url= "https://www.transit.dot.gov/sites/fta.dot.gov/files/2024-02/December%202023%20Raw%20Monthly%20Ridership%20%28no%20adjustments%20or%20estimates%29.xlsx"
NTD=pd.read_excel(url, sheet_name=None)
master_NTD= pd.read_excel(url, sheet_name='Master')
UPT= pd.read_excel(url, sheet_name='UPT')

#Annual Unlinked Passenger Trips and Annual Vehicle Revenue Miles data loaded
AnnualUPT= pd.read_excel(url, sheet_name='Calendar Year UPT')
AnnualVRM= pd.read_excel(url, sheet_name='Calendar Year VRM')

#Service data loaded( Monthly Vehicle Revenue Miles, Vehicle Revenue Hours, Vehicles Operated in Max Service)
VRM= pd.read_excel(url, sheet_name='VRM')
VRH= pd.read_excel(url, sheet_name='VRH')
VOMS= pd.read_excel(url, sheet_name='VOMS')

#Annual Ridership data for Heavy Rail, MotorBus, Commuter Rail, Light Rail, StreetCar, and Rapid Bus
HR_AnnualUPT= AnnualUPT[AnnualUPT['Mode']=='HR']
MB_AnnualUPT=AnnualUPT[AnnualUPT['Mode']=='MB']
LRT_AnnualUPT=AnnualUPT[AnnualUPT['Mode']=='LR']
CR_AnnualUPT=AnnualUPT[AnnualUPT['Mode']=='CR']
SR_AnnualUPT=AnnualUPT[AnnualUPT['Mode']=='SR']
BRT_AnnualUPT=AnnualUPT[AnnualUPT['Mode']=='BRT']
